<?xml version='1.0' encoding='utf-8'?>
<widget id="com.malerbati.dualwine" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dual Wine</name>
    <description>
        Dual Wine, a smmall quizz app on the wine topic
    </description>
    <author email="b.malahieude@free.fr" href="http://bastienmalahieude.fr">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="www/ressources/img/icon/icon.png" platform="android" width="57" height="57" density="hdpi" />
    <icon src="www/ressources/img/icon/icon.png" platform="ios" width="57" height="57" density="hdpi" />
</widget>


